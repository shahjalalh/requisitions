                            </field>

                        </page>

                    </notebook>
                </sheet>

            </form>
        </field>
    </record>

    <record id="po_requisition_action" model="ir.actions.act_window">
        <field name="name">Requsition</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">po.requisition</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <record id="po_requisition_tree" model="ir.ui.view">
        <field name="name">po.requisition.tree</field>
        <field name="model">po.requisition</field>
        <field name="arch" type="xml">
            <tree string="PO Requisition">
                <field name="id" invisible="1"/>
                <field name="name" string="Name"/>
                <field name="warehouse_ids" />
                <field name="delivery_date" />

            </tree>
        </field>
    </record>

    <!--Supplier menu-->

    <menuitem id="menu_procurement_management_po_requisition" name="Requitation" parent="purchase.menu_procurement_management" action="po_requisition_action" sequence="101"/>

</odoo>