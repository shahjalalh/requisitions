<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_po_requisition_document">
    <t t-call="web.external_layout">
        <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
        <t t-set="address">
            <div t-field="o.partner_id"
            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
            <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.partner_id.vat"/></p>
        </t>
        
        <div class="page">
            <div class="oe_structure"/>

            <h2>PO Requisition <span t-field="o.name"/></h2>
            <div class="row">
                <div class="col-6">
                    <p>Warehouse: <span t-field="o.warehouse_id"/></p>
                    <p>Delivery Date: <span t-field="o.delivery_date"/></p>
                </div>
                <div class="col-6">
                    <p>PO Reference: <span t-field="o.po_reference"/></p>
                    <p>Vendor: <span t-field="o.partner_id"/></p>
                </div>
            </div>
            

            <table class="table table-sm">
                <thead>
                    <tr>
                        <th><strong>Description</strong></th>
                        <th class="text-center"><strong>Qty</strong></th>
                        <th class="text-right"><strong>UOM</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="order_line">
                        <td>
                            <span t-field="order_line.product_id"/>
                        </td>
                        <td class="text-center">
                            <span t-field="order_line.product_qty"/>
                        </td>
                        <td class="text-right">
                            <span t-field="order_line.product_uom.name"/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="oe_structure"/>
        </div>
    </t>
</template>

<template id="report_po_requisition">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="requisitions.report_po_requisition_document" t-lang="o.partner_id.lang"/>
        </t>
    </t>
</template>
</odoo>

